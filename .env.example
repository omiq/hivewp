# .env
GHOST_ADMIN_API_URL="https://your-ghost-blog.com"
GHOST_ADMIN_API_KEY="YOUR_ADMIN_API_KEY" # Get from Ghost Admin -> Integrations -> Custom Integration
RSS_FEED_URL="https://your-rss-feed-url.xml"
CHECK_INTERVAL_MINUTES="60" # Check every hour
POSTS_PER_CHECK="10" # Import up to 10 new posts per check
POST_STATUS="draft" # Default status for imported posts ('draft', 'published', 'scheduled')
# Optional: Set to 'link' if feed GUIDs are unreliable, otherwise uses GUID
DUPLICATE_CHECK_FIELD="guid"